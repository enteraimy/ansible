version: '3.0'

services:

  nginx:
    image: nginx
    environment:
      - VIRTUAL_HOST={{ site }}
    depends_on:
      - php
    volumes:
      - {{ansible_env.HOME}}/files/conf.d/:/etc/nginx/conf.d/
      - {{ansible_env.HOME}}/nginx/nginx.conf:/etc/nginx/nginx.conf
      - {{ansible_env.HOME}}/files/html/:/var/www/html/
    networks:
      - frontend
      - backend

  php:
    build:
      context: {{ansible_env.HOME}}/files
    volumes:
      - {{ansible_env.HOME}}/files/php/php.ini:/usr/local/etc/php/php.ini
      - {{ansible_env.HOME}}/files/html/:/var/www/html/
    networks:
      - backend

  mysql:
    image: mysql:5.7
    volumes:
      - /etc/data:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: root
    networks:
      - backend

  phpmyadmin:
    image: phpmyadmin/phpmyadmin:latest
    environment:
      - VIRTUAL_HOST={{ base }}
      - PMA_HOST=mysql
      - PMA_USER=root
      - PMA_PASSWORD=root
    networks:
      - frontend
      - backend

networks:
  frontend:
    external: 
      name: proxy_proxy
  backend:

